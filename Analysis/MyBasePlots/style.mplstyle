# dimensioni testo (baseline “paper”)
font.size: 11
axes.titlesize: 12
axes.labelsize: 12
xtick.labelsize: 11
ytick.labelsize: 11

# spessori e tick
lines.linewidth: 2.0
axes.linewidth: 1.6
xtick.major.width: 1.2
ytick.major.width: 1.2
xtick.major.size: 5.0
ytick.major.size: 5.0
xtick.direction: out
ytick.direction: out

# marker moderati
lines.markersize: 5

